<%-include('partials/header.ejs')%>

<div class='ui main text container segment'>
  <div class="ui huge header">Edit Blog</div>
  <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method='POST'>
    <div class="field">
      <label>Title</label>
      <input type="text" placeholder="Title" name="blog[title]" value="<%=blog.title%>">
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" placeholder="Image" name="blog[image]" value="<%=blog.image%>">
    </div>
    <div class="field">
      <label>Body</label>
      <textarea name="blog[body]" placeholder="Put your content here"><%=blog.body%></textarea>
    </div>
    <button class="ui violet basic button">Submit</button>
  </form>
</div>

<%-include('partials/footer.ejs')%>
